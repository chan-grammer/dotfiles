; .editorconfig
root = true

trim_trailing_whitespace = true

[**.js]
path=~/.vim/bundle/js-beautify/js/lib/beautify.js
indent_style = space
indent_size = 2

[**.css]
path=~/.vim/bundle/js-beautify/js/lib/beautify-css.js
indent_style = space
indent_size = 4

[**.html]
path=~/.vim/bundle/js-beautify/js/lib/beautify-html.js
indent_style = tab
indent_size = 4
